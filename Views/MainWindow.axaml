<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:vm="using:ModManager.ViewModels"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
        x:Class="ModManager.Views.MainWindow"
        Icon="/Assets/avalonia-logo.ico"
        Title="ModManager">

  <!-- This is just used by the designer / previewer -->
    <Design.DataContext>
        <vm:MainWindowViewModel/>
    </Design.DataContext>

  <Grid>
    <DataGrid Items="{Binding Plugins}" AutoGenerateColumns="False" >
      <DataGrid.Columns>
        <DataGridCheckBoxColumn Binding="{Binding IsActive}" />
        <DataGridTextColumn Header="Name" Binding="{Binding Name}" IsReadOnly="True"/>
        <DataGridTextColumn Header="Priority" Binding="{Binding Priority, Mode=TwoWay}" />
      </DataGrid.Columns>
    </DataGrid>
  </Grid>
 
</Window>
